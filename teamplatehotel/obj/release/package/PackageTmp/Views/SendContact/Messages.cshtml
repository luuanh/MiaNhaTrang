@using ProjectLibrary.Database
@using TeamplateHotel.Handler
@model TeamplateHotel.Models.DetailArticle
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    Menu menu = ViewBag.Menu ?? new Menu();
}

<section class="breadcrumb-area overlay-dark-2 bg-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-text text-center">
                    <h2>Messages</h2>
                    <ul>
                        <li><a href="~/Views/Home/Index.cshtml">@GetLanguage.Language(Request.Cookies["LanguageID"].Value, "Home")</a></li>
                        <li>Messages</li>
                    </ul>

                </div>
            </div>
        </div>
    </div>
</section>
<div class="container posts">
    <div class="row">
        <div class="col-md-12">
            <h1 class="aic-titel">Messages</h1>
            <p style="text-align:justify">@Html.Raw(ViewBag.Messages)</p>            
        </div>
    </div>
</div>
             
                                               
