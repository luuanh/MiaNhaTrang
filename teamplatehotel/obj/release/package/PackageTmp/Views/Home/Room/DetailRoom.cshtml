@using TeamplateHotel.Handler
@model Room
@using ProjectLibrary.Database
@using TeamplateHotel.Models
@using TeamplateHotel.Controllers

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    Menu menu = ViewBag.Menu ?? new Menu();
    List<Room> ListRoom = CommentController.GetRooms(Request.Cookies["LanguageID"].Value);
}
<style>
    .ttct-room h2 {
        font: 400 35px/1 "Playfair Display", serif;
        text-transform: uppercase;
        letter-spacing: 3px;
        margin: 0;
        position: relative;
        display: block;
        line-height: 56px;
    }

    .ttct-room li {
        display: block;
        padding: 5px 0;
        /*border-bottom: 1px solid #e5e7e9;*/
    }
</style>
<div class="ok-text" style="top:25%">
    <h1>@Model.Title</h1>
    <div>
            @Html.Raw(Model.Slogan)
        </div>
    @*<div class="head-link" style="margin: auto; width: 150px; padding-bottom: 10px; margin-top: 20px;">
            <a href="/offer">Read More</a>
        </div>*@
</div>

<div class="tt-suite">
    <div class="container">
        <div class="text-yoga">
            <p class="wow bounce">
                @Html.Raw(Model.Description)

            </p>
            <div style="height: 150px; width: 2px; background: #679334; margin: auto"></div>
        </div>
    </div>
</div>
<section class="ttct-room" style="padding-top: 50px; padding-bottom: 50px; background: #eee">
    <div class="container">
        <div class="row">
            <div class="col-md-6 right1 wow slideInLeft">
                <img src="@Model.Image" class="img-fluid" alt="">
            </div>
            <div class="col-md-6">
                <div class="wow slideInRight" style="background: #fff; padding: 30px 60px 30px; margin-top: 50px;">
                    <h2>
                        @Model.Title
                    </h2>
                    <div class=" col-md-12">
                        @Html.Raw(Model.Content)

                    </div>

                    <a href="/booking" target="_blank" class="inline-link inline-large q_magnet">@GetLanguage.Language(Request.Cookies["LanguageID"].Value, "BookingNow")</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="home_accommodation" class="section block-fullscreen bg-blue-dark bg-image-section-two reveal">

    <div class="q-container container-inner">
        <div class="columns">
            <div class="column villas-container">
                <div id="accommodations" class="accommodations column-grid-container">


                    @foreach (var item in ListRoom.Where(a=>a.ID != Model.ID).Take(3))
                    {
                        <div class="accommodation-type column-item">
                            <a href="/@item.Alias">
                                <h4 class="accommodation-name">@item.Title</h4>
                                <div class="accommodation-bg" style="background-image: url('@item.Image')">
                                    <div class="accommodation-bg-change" data-src="@item.ImageBackground" style="background-image: url(@item.ImageBackground)"></div>
                                </div>
                            </a>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</section>
<style>
    table {
        display: contents
    }
</style>