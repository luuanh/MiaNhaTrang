@foreach (var item in Model.Where(a => a.New == true))
{
    if (j % 2 == 0)
    {
        <div class="muine">
            <div class="row">
                <img src="~/Content/images/shape_3.png" style="width:100%" class="img-bg" />
                <!-- <img class="img-bg" src="./image/shape_3.png" width="100%" alt=""> -->
                <div class="col-md-8">
                    <img src="@item.Image" class="img-fluid" alt="" />
                </div>
                <div class="col-md-4">
                    <div class="text-muine">
                        <h1>@item.Title</h1>
                        <p>
                            @Html.Raw(item.Description)
                        </p>
                    </div>
                </div>
            </div>

        </div>
    }
    else
    {
        <div class="muine">
            <div class="row">
                <img src="~/Content/images/shape_3.png" style="width:100%" class="img-bg" />
                <!-- <img class="img-bg" src="./image/shape_3.png" width="100%" alt=""> -->

                <div class="col-md-4">
                    <div class="text-muine">
                        <h1>@item.Title</h1>
                        <p>
                            @Html.Raw(item.Description)
                        </p>
                    </div>
                </div>
                <div class="col-md-8">
                    <img src="@item.Image" class="img-fluid" alt="" />
                </div>
            </div>

        </div>
    }
    j++;
}
