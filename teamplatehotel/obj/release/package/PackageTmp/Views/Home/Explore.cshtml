@using TeamplateHotel.Models
@using ProjectLibrary.Database

@model List<Article>
@{
    Menu menu = ViewBag.Menu ?? new Menu();
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    ViewBag.Title = "About";
    int i = 0;
    int j = 0;
}
<style>
    .item {
        font-family: 'altis';
        font-size: 12px;
        height: 330px;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        position: relative;
        overflow: hidden;
    }

        .item:hover .content {
            -webkit-transform: translateY(-100%);
            -ms-transform: translateY(-100%);
            transform: translateY(-100%);
        }

    .act-title {
        color: white;
        font-size: 20px;
        font-family: 'trend';
        margin-bottom: 15px;
        margin-top: 4px;
    }

    .item .content {
        padding: 20px 20px 20px;
        transition: 350ms ease-out;
        -ms-transition: 350ms ease-out;
        -moz-transform: 350ms ease-out;
        -o-transition: 350ms ease-out;
        -webkit-transition: 350ms ease-out;
        position: absolute;
        top: 100%;
        width: 100%;
        -webkit-transform: translateY(-70px);
        -ms-transform: translateY(-70px);
        transform: translateY(-70px);
        color: white;
    }

        .item .content p {
            margin: 0 auto;
            padding: 10px 0;
            line-height: 1.5;
            text-align: left;
            font-size: 10pt;
        }
</style>
@Html.Partial("Menu/MainMenus")
<div class="banner-explore" style="background-image:url(@menu.Image)">

    <h1>
        @menu.Title <br>

    </h1>
    @*<img src="~/Content/images/shape_2.png" style="width:100%" />*@

</div>




<div class="box" style="margin-top: -39px;">
    <div class="col-md-6 box1">
        <div class="row">
            @foreach (var item in Model.Where(a => a.Top == true).Take(4))
            {
                if (i == 1)
                {
                    <div class="col-md-6">
                        <div class="item tours">
                            <img src="@item.Image" class="img-fluid">
                            <div class="content" style="background: #ECBC40">
                                <div class="act-title">@item.Title</div>
                                @Html.Raw(item.Description)
                            </div>
                        </div>
                    </div>
                }
                else if (i == 2)
                {
                    <div class="col-md-6">
                        <div class="item tours">
                            <img src="@item.Image" class="img-fluid">
                            <div class="content" style="background: #CF533F">
                                <div class="act-title">@item.Title</div>
                                @Html.Raw(item.Description)
                            </div>
                        </div>
                    </div>
                }
                else if (i == 3)
                {
                    <div class="col-md-6">
                        <div class="item tours">
                            <img src="@item.Image" class="img-fluid">
                            <div class="content" style="background: #ECBC40">
                                <div class="act-title">@item.Title</div>
                                @Html.Raw(item.Description)
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-md-6">
                        <div class="item tours">
                            <img src="@item.Image" class="img-fluid">
                            <div class="content" style="background: #3FB77D">
                                <div class="act-title">@item.Title</div>
                                @Html.Raw(item.Description)
                            </div>
                        </div>
                    </div>
                }
                i++;
            }



        </div>
    </div>
</div>






