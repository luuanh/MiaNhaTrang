@using ProjectLibrary.Database
@using TeamplateHotel.Handler
@using TeamplateHotel.Controllers
@model List<Service>
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    Menu menu = ViewBag.Menu ?? new Menu();
    int i = 0;
    List<ServiceGallery> serviceGalleries = CommentController.GetServiceGalleries();
}
@Html.Partial("Menu/MainMenus")
@Html.Partial("Slider/Slider")
<div id="main" role="main">
    <section id="unwindPage">
        <div class="pContain">

            @*<div class="mainBanner">
                
                <img src="~/Content/images/unWind/banner_640.jpg" class="show-mobile">
                <div class="logo">
                    <img src="~/Content/images/logo_xanh_spa_blue.svg">
                </div>
            </div>*@

            <div id="revive" class="boxContent reviveHolder">

                @foreach (var item in Model.Where(a => a.Top == true))
                {
                    <div class="title">
                        @item.Title
                    </div>
                    <div class="row1">
                        <div class="col col1" style="background-image:url(@item.Image)">
                            <img src="@item.Image" class="show-mobile">
                        </div>
                        <div class="col col2 content">
                            <div class="des">
                                @Html.Raw(item.Description)
                            </div>
                        </div>
                    </div>
                    <div class="shape"></div>


                    <div class="treatments">

                        <div class="title">Treatments</div>

                        <ul>
                            @foreach (var option in serviceGalleries.Where(a => a.ServiceID == item.ID))
                            {
                                <li>
                                    <div class="icon"><img src="@option.Icon"></div>
                                    <div class="caption">@option.Name</div>
                                </li>

                            }
                        </ul>



                    </div>

                }

            </div>	<!-- boxContent -->
            <!-- treatments -->
            @*<div class="conde-nash">
                    <a href="http://www.johansens.com/asia/vietnam/khanh-hoa-province/mia-resort-nha-trang/" target="_blank">
                        <img src="~/Content/images/award-conde-nash.svg">
                        <div class="award-desc">
                            <p class="conde-nash-header">Condé Nast Johansens Readers’ Award – Mia Resort Nha Trang, Khanh Hoa Province, Vietnam</p><p>“It simply doesn’t get much better than this. Facing one of the world’s finest beaches from lush, manicured gardens on the South Central Coast of Vietnam, Mia Resort is a heavenly hideaway on Nha Trang Bay. The height of sophisticated modern design, this is an all-villa beachy flop-and-drop spot where you can expect world-class hospitality and off-the-grid privacy."</p>
                        </div>
                    </a>
                </div>*@



            <div id="activities" class="activities" style="margin-top:0px">
                <div class="title">activities</div>
                <div>
                    @foreach (var item in Model.Where(a => a.Activities == true))
                    {
                        if (i == 0)
                        {
                            <div class="item water-sports" style="background-image:url(@item.Image)">
                                <img src="@item.Image" class="show-mobile">
                                <div class="content">
                                    <div class="act-title">@item.Title</div>
                                    @Html.Raw(item.Description)
                                </div>
                            </div>

                        }
                        else if (i == 1)
                        {
                            <div class="item scuba-dive" style="background-image:url(@item.Image)">
                                <img src="@item.Image" class="show-mobile">
                                <div class="content">
                                    <div class="act-title">@item.Title</div>
                                    @Html.Raw(item.Description)
                                </div>
                            </div>

                        }
                        else if (i == 2)
                        {
                            <div class="item sight-seeing" style="background-image:url(@item.Image)">
                                <img src="@item.Image" class="show-mobile">
                                <div class="content">
                                    <div class="act-title">@item.Title</div>
                                    @Html.Raw(item.Description)
                                </div>
                            </div>

                        }
                        else if (i == 3)
                        {
                            <div class="item sporting-facilities" style="background-image:url(@item.Image)">
                                <img src="@item.Image" class="show-mobile">
                                <div class="content">
                                    <div class="act-title">@item.Title</div>
                                    @Html.Raw(item.Description)
                                </div>
                            </div>

                        }
                        else if (i == 4)
                        {
                            <div class="item kids-club" style="background-image:url(@item.Image)">
                                <img src="@item.Image" class="show-mobile">
                                <div class="content">
                                    <div class="act-title">@item.Title</div>
                                    @Html.Raw(item.Description)
                                </div>
                            </div>

                        }

                        else
                        {
                            <div class="item cooking-classes" style="background-image:url(@item.Image)">
                                <img src="@item.Image" class="show-mobile">
                                <div class="content">
                                    <div class="act-title">@item.Title</div>
                                    @Html.Raw(item.Description)
                                </div>
                            </div>
                            i = -1;

                        }
                        i++;

                    }

                </div>
            </div><!-- activities -->



            <div class="special boxContent">
                <div class="title">special requests</div>
                <div class="des">
                    <p>Bespoke packages planned by us to cater to your needs. </p>
                </div>
                <div class="plan-now button type7">PLAN YOUR EVENT NOW</div>
            </div>

        </div> <!-- end pContain -->
    </section> <!-- section -->
</div><!-- end main -->