@using ProjectLibrary.Database
@model List<Gallery>
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    Menu menu = ViewBag.Menu ?? new Menu();
    int i = 1;
}

@Html.Partial("Menu/MainMenus")
<div id="main" role="main">
    <section id="galleryPage">
        <div class="pContain">

            <div class="mainBanner type2 green">
                <div class="caption align-m">RESORT GALLERY</div>
            </div><!-- mainBanner -->

            <div class="thumbHolder">
                <div class="thumbCore">

                    @if (Model.Count > 3)
                    {
                        <div class="thumbItem">
                            <div class="col col1">
                                <div class="row r1">
                                    <div class="colum c1">
                                        <div class="img" photoID="0" style='background-image: url("@Model[0].LargeImage");'></div>
                                    </div>
                                    <div class="colum c2">
                                        <div class="img" photoID="1" style='background-image: url("@Model[1].LargeImage");'></div>
                                    </div>
                                </div>
                                <div class="row r2">
                                    <div class="img" photoID="2" style='background-image: url("@Model[2].LargeImage");'></div>
                                </div>
                            </div>
                            <div class="col col2">
                                <div class="img" photoID="3" style='background-image: url("@Model[3].LargeImage");'></div>
                            </div>
                        </div><!-- thumbItem -->

                    }





                    @if (Model.Count > 7)
                    {
                        <div class="thumbItem">
                            <div class="col col2">
                                <div class="img" photoID="4" style='background-image: url("@Model[4].LargeImage");'></div>
                            </div>

                            <div class="col col1">
                                <div class="row r2">
                                    <div class="img" photoID="5" style='background-image: url("@Model[5].LargeImage");'></div>
                                </div>

                                <div class="row r1">
                                    <div class="colum c1">
                                        <div class="img" photoID="6" style='background-image: url("@Model[6].LargeImage");'></div>
                                    </div>
                                    <div class="colum c2">
                                        <div class="img" photoID="7" style='background-image: url("@Model[7].LargeImage");'></div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- thumbItem -->
                    }



                    <div class="gallery">
                        <div class="galleryCore align-m">
                            <div class="number"></div>
                            <div class="galleryItem">
                                @*<img src="Content/images/gallery/slide1.jpg" />*@
                                @foreach (var item in Model.Take(8))
                                {
                                    <div class="item"><img src="@item.LargeImage"></div>
                                }


                            </div>

                            <div class="controller">
                                <div class="btn nextBtn"></div>
                                <div class="btn preBtn"></div>
                            </div>
                        </div>

                        <div class="bg"></div>
                    </div><!-- gallery -->


                </div><!-- thumbCore -->
            </div><!-- thumbHolder -->
            <!-- <div class="press">
                <div class="title blue">press</div>
            </div> -->


        </div> <!-- end pContain -->
    </section> <!-- section -->
</div><!-- end main -->