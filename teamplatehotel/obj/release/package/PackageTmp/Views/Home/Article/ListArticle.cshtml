@using ProjectLibrary.Database
@using TeamplateHotel.Handler
@using TeamplateHotel.Controllers
@model IEnumerable<ProjectLibrary.Database.Article>
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    Menu menu = ViewBag.Menu ?? new Menu();
    int i = 1;
}
@Html.Partial("Menu/MainMenus")
<!-- Your page here -->
<div id="main" role="main">
    <section id="dinePage">
        <div class="pContain">

            <div class="dine-banner">
                @foreach (var item in Model.Where(a => a.Top == true).ToList())
                {
                    <div class="item sandals" style="background-image:url(@item.Image)">
                        <img class="show-mobile" src="@item.Image" alt="">
                        <div class="content">
                            <div class="imgHolder"><h3>@item.Title</h3></div>
                            <p>@Html.Raw(item.Description)</p>
                            <!-- <a href="#" class="button viewPhotoBtn type4">view photos</a> -->
                        </div>
                    </div>
                }

            </div><!-- dine-banner -->

            <div class="articalHolder">
                @foreach (var item in Model.Where(a => a.Hot == true).ToList())
                {
                    <div class="articalItem privateDining">
                        <div class="imageHolder"><img src="@item.Image" alt=""></div>
                        <div class="content">
                            <h3>@item.Title</h3>
                            <p class="des">
                                @item.Description
                            </p>
                        </div>
                    </div>
                }




                <div id="eating-activities" class="activities eating-activities type2">
                    @foreach (var item in Model.Where(a => a.New == true))
                    {
                        <div class="item viet-buffet sandals" style="background-image:url(@item.Image)">
                            <img src="@item.Image" class="show-mobile">
                            <div class="content">
                                <div class="act-title">@item.Title</div>
                                @*<div class="act-loc">At Sandals Restaurant</div>*@
                                <p>@Html.Raw(item.Description)  </p>
                            </div>
                        </div>
                    }


                    <div class="pContain">
                        <div class="dinner-event-calendar special-offer-col">
                            <p class="title">DINNER EVENT CALENDAR</p>
                            <ul>
                                <li class="event">
                                    <div class="event-day">WEDNESDAY</div>
                                    <div class="event-title">TRADITIONAL VIETNAMESE CULINARY JOURNEY</div>
                                    <div class="event-loc">Sandals Restaurant</div>
                                    <div class="event-time">6:30pm - 9:00pm</div>
                                    <!-- <div class="event-price">550,000 VND per person</div> -->
                                    <!-- <div class="event-perk">Vietnamese traditional music: 7 – 9pm</div> -->

                                </li>
                                <li class="event">
                                    <div class="event-day">SATURDAY</div>
                                    <div class="event-title">ASIAN</div>
                                    <div class="event-title">BBQ NIGHT</div>
                                    <div class="event-loc"></div>
                                    <div class="event-loc">Sandals Restaurant</div>
                                    <div class="event-time">6:30pm - 9:30pm</div>
                                    <!-- <div class="event-price">700,000 VND per person</div> -->
                                    <div class="event-perk">Live Music from 7 – 9pm</div>

                                </li>
                            </ul>
                        </div>
                    </div>

                </div><!-- articalHolder -->
            </div> <!-- end pContain -->
    </section> <!-- section -->
</div><!-- end main -->