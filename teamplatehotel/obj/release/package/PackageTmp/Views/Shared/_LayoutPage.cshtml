@using ProjectLibrary.Database
@using TeamplateHotel.Controllers
@using TeamplateHotel.Handler
@using ProjectLibrary.Config
@using TeamplateHotel.Models
@{
    Hotel detailHotel = CommentController.DetailHotel(Request.Cookies["LanguageID"].Value);
    List<Language> languages = CommentController.GetLanguages();
    Plugin plugin = CommentController.GetPluigPlugin();
    List<Menu> menus = CommentController.GetMainMenus(Request.Cookies["LanguageID"].Value);
    List<Menu> menufooter = CommentController.GetSecondMenus(Request.Cookies["LanguageID"].Value);
    string alias = "";

    string homepage = "";
    if (ViewBag.HomePage == true)
    {
        homepage = "home";
    }
   

}
<!DOCTYPE html>
<html class="js" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <!-- Basic Page Needs -->
    <meta charset="utf-8">
    <title>@ViewBag.MetaTitle</title>
    <meta name="robots" content="index, follow">
    <meta name="keywords" content="@Html.Raw(ViewBag.MetaKeyword)">
    <meta name="description" content="@ViewBag.MetaDesctiption">
    <link rel="icon" href="~/favicon.ico">
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Font-->
    


</head>
<body class="teamplate2">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="~/Content/css/animate.css" rel="stylesheet" />
    <link href="~/Content/css/reset.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/reponsive.css" rel="stylesheet" />
    <link href="~/Content/css/ie.css" rel="stylesheet" />

    <link href="~/Plugins/OwlCarousel/assets/owl.carousel.min.css" rel="stylesheet" />


    <!-- use js to load header.html -->



    @RenderBody()
    <footer>
        <div class="col-md-7" style="margin: auto">
            <div class="title">RESORT AWARDS</div>
            <div class="row">
                <div class="col-md-4">
                    <img src="~/Content/images/award.png" width="100%" />
                </div>
                <div class="col-md-4">
                    <img src="~/Content/images/smth.png" width="100%" />

                </div>
                <div class="col-md-4">
                    <img src="~/Content/images/world.png" width="100%" />

                </div>
            </div>
        </div>
        <div class="menu-ft">
            <div class="col-md-5">
                @foreach (var item in menufooter)
                {
                    <a href="/@item.Alias">@item.Title</a>
                }


            </div>
        </div>
        <div class="mn2">
            <img src="@detailHotel.Logo" class="center" alt="" style="width:120px">
            <div class="col-md-5">
                @foreach (var item in menus)
                {
                    <a href="/@item.Alias">@item.Title</a>
                }

            </div>
            <div class="img-ft col-md-3">
                <a href="@detailHotel.Facebook">
                    <img src="~/Content/images/icon_fb.svg" />
                </a>
                <a href="@detailHotel.Twitter">
                    <img src="~/Content/images/icon_tw.svg" />
                </a>
                <a href="@detailHotel.Tripadvisor">
                    <img src="~/Content/images/icon_trip.svg" />
                </a>




            </div>
        </div>
        <div class="end-ft">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <p>
                            @detailHotel.CopyRight by <a href="https://webhotel.vn/">webhotel.vn</a>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>

    <script src="~/Content/js/jquery-3.1.1.min.js"></script>
    <script src="~/Content/js/jquery.fullPage.js"></script>
    <script src="~/Content/js/jquery.easing.1.3.min.js"></script>
    <script src="~/Content/js/velocity.min.js"></script>
    <script src="~/Content/js/object-fit-videos.min.js"></script>
    <script src="~/Content/js/common.js"></script>

    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    @*<script src="~/Content/js/common30f4.js"></script>*@
    @*<script src="~/Plugins/OwlCarousel/owl.carousel.min.js"></script>*@













</body>
</html>

